{{!< default}}
<div class="h-[96px] w-screen-xl mx-2 text-slate-100 flex justify-center items-center mx-auto bg-slate-700">
	<div class="text-center">PLACEHOLDER ADVERTISEMENT 96px height 1280px width</div>
</div>
<div class="grid grid-cols-1 md:grid-cols-3 md:gap-2 my-6 md:mx-2 text-slate-100 z-0">
	{{#get "posts" limit="4" filter="featured:true" include="tags,authors"}}
		{{#foreach posts limit="1"}}
			<article class="col-span-3 md:rounded-lg shadow hover:shadow-md relative transition transition-all">
				<div class="metadata absolute left p-2">
					AAA
				</div>
				<div class="imgmask">
					<img src="{{img_url feature_image size="l"}}" alt="" class="left w-full h-full md:rounded-lg object-cover object-center w-full xl:h-[32rem] md:aspect-video aspect-square transition transition-all md:border border-slate-500/50">
				</div>
				
			</article>
		{{/foreach }}
		{{#foreach posts from="2"}}
			<article class="xl:col-span-1 col-span-3 md:rounded-lg shadow hover:shadow-md relative transition transition-all ">
				<div class="metadata absolute left p-2">
					<div class="tag">
						AAA
					</div>
				</div>
				<div class="imgmask">
					<img src="{{img_url feature_image size="l"}}" alt="" class="left w-full h-full md:rounded-lg object-cover object-center w-full xl:h-[20rem] md:aspect-video aspect-square transition transition-all md:border border-slate-500/50">
				</div>
				
			</article>
		{{/foreach}}
	{{/get}}
</div>

<div class="gh-page">
    <div class="gh-container">

        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
